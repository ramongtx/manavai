= form_tag({ action: :list }, remote: true, class: 'col s12') do
  .row
    .col.s12{ style: 'display: flex' }
      .input-field{ style: 'flex-grow: 100' }
        = text_field_tag :term, @term
        %label{:for => "term"} Nome da carta
        = hidden_field_tag :updatable, '#card_list'
        = hidden_field_tag :list, list if list.present?
        = hidden_field_tag :id, username if username.present?
      .input-field
        = submit_tag label, class: 'btn waves-effect waves-light'