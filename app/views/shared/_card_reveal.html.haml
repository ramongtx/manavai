.card
  .card-image.activator
    = image_tag (card.image_url || 'card_back.jpg'), class: 'activator'
    %a.btn-floating.halfway-fab.waves-effect.waves-light.red
      %i.material-icons more_vert
  .card-content.activator
    %span.card-title.activator.grey-text.text-darken-4
      - if user_signed_in?
        - if current_user.wanted_cards.ids.include?(card.id)
          %i.material-icons.tiny.blue-text star
        - if current_user.owned_cards.ids.include?(card.id)
          %i.material-icons.tiny.red-text bookmark
      #{card.portuguese_name || card.name}
  .card-reveal
    .card-title.grey-text.text-darken-4
      %i.material-icons.right close
    .card-content
      %p
        %b> Nome:
         #{card.name}
      %p
        %b> Tradução:
         #{card.portuguese_name}
    - if current_user.present?
      .card-action
        - want_label = 'Quero!'
        - have_label = 'Tenho!'
        - want_class = 'green-text'
        - have_class = ''
        - if current_user.wanted_cards.include?(card)
          - want_label = 'Não quero mais!'
          - want_class = 'red-text'
        - if current_user.owned_cards.include?(card)
          - have_label = 'Não tenho mais!'
          - have_class = 'red-text'
        = link_to want_label, want_card_path(card), method: :put, remote: true, class: want_class
        = link_to have_label, have_card_path(card), method: :put, remote: true, class: have_class